 <mapper namespace="com.example.demo.mapper.TodoMapper">
 <select id="getAllTodo" resultType="TodoDTO">
 SELECT * FROM todo_db
 </select>
 <insert id="InsertTodo" parameterType="UserDTO">
 		INSERT INTO todo_db (task) VALUES(#{task})
 	</insert>
 	<delete id="DeleteTodo" parameterType="int">
 		DELETE FROM todo_db WHERE id = #{id}
 	</delete>
 	</mapper>